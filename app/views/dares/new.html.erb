<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">New Dare!!</h3>
      <div class="actions pull-right">
       <i class="fa fa-expand"></i>
          <i class="fa fa-chevron-down"></i>
          <i class="fa fa-times"></i>
      </div>
    </div>
    <div class="panel-body">
      <%= form_for @dare do |f| %>
        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.label 'Dare Recepient ID' %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :dare_recepient_id %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.label 'Description' %>
          </div>
          <div class="col-sm-6">
            <%= f.text_area :description %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= submit_tag 'Run', class: 'btn btn-success' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
