<% @dares.each do |dares| %>
<div class="container">
    <div class="row">
        <div class="[ col-xs-10  col-sm-8 ]">
            <div class="[ panel panel-default ] panel-google-plus">
                <div class="panel-heading">
                    <img class="[ img-circle pull-left ]" src="https://orig00.deviantart.net/06cf/f/2016/191/e/8/ash_ketchum_render_by_tzblacktd-da9k0wb.png" class="img-circle" alt="Mouse0270" width="100" height="100" />


                    <% if dares.dare_giver_id== current_user.id %>
                        <h3>YOU</h3> 
                    <% else %>
                        <%= "#{dares.dare_giver_name} " %> 
                    <%end%>
                    dared          

                    <% if dares.dare_recepient_id== current_user.id %>
                        you
                    <% else %>
                        <%= "#{dares.dare_receiver_name} " %> 
                    <%end%>
                    <h5><span>Dare created</span> - <span><%= "#{dares.created_at} " %></span> </h5>
                </div>
                <div class="panel-body">
                    <p><%= "#{dares.description} " %></p>
                </div>
                <%= render 'comments/form' %>

            </div>
        </div>
        
        
    </div>
</div>
  
  <br>
<% end %>